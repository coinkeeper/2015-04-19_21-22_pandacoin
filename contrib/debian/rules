#!/usr/bin/make -f
# -*- mode: makefile; coding: utf-8 -*-

#DEB_MAKE_CHECK_TARGET = test_pandacoin
#build/pandacoind::
#	$(if $(filter nocheck,$(DEB_BUILD_OPTIONS)),,src/test_pandacoin)

DEB_INSTALL_EXAMPLES_pandacoind += debian/examples/*
DEB_INSTALL_MANPAGES_pandacoind += debian/manpages/*

%:
	dh --with bash-completion $@

override_dh_auto_build:
	cd src; $(MAKE) -f makefile.unix pandacoind
	$(MAKE)

override_dh_auto_clean:
	if [ -f Makefile ]; then $(MAKE) clean; else rm -rf build/; rm -f pandacoin-qt; fi
	cd src; $(MAKE) -f makefile.unix clean

override_dh_auto_configure:
	qmake pandacoin-qt.pro USE_QRCODE=1

override_dh_auto_test:
	cd src; $(MAKE) -f makefile.unix test_pandacoin
	src/test_pandacoin

# Ensure wrapper is set executable
binary-post-install/pandacoind:
	chmod +x $(cdbs_curdestdir)usr/bin/pandacoind
binary-post-install/pandacoin-qt:
	chmod +x $(cdbs_curdestdir)usr/bin/pandacoin-qt
